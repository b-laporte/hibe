    "version": "0.2.0",
    "configurations": [
        
        {
            // Note: hibe tests need to be built before triggering this configuration
            "type": "node",
            "request": "launch",
            "name": "Hibe tests",
            "program": "${workspaceRoot}/node_modules/.bin/_mocha",
            "args": [
                "dist/test.js"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/dist/test.js"
            ]
        }
    ]
    
}